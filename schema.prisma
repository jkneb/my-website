// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    email    String @unique
    username String
    password String
}

model Project {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    role      String
    company   String?
    images    String[]
    text      String?
    startDate DateTime
    endDate   DateTime?
    location  String?
    links     String[]
    status    Status
    client    Client?   @relation(fields: [clientId], references: [id])
    clientId  String?   @db.ObjectId
}

model Client {
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    name     String
    logo     String
    projects Project[]
}

enum Status {
    Freelance
    CDI
}
